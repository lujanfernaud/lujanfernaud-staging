{
  "extends": "standard",

  "rules": {
    "space-before-function-paren": ["error", {
      "anonymous": "always",
      "named": "never",
      "asyncArrow": "always"
    }],

    "no-multi-spaces": ["error", {
      "exceptions": {
        "AssignmentExpression": true,
        "VariableDeclarator": true,
        "IfStatement": true
      }
    }]
  },

  "globals": {
    "localStorage": true,
    "fetch": true
  }
}
